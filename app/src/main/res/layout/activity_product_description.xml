<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProductDescriptionActivity"
    android:background="@color/colorPrimary"
    android:clipChildren="false">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/toolbar_main"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_radius">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_large"
                android:fontFamily="@font/google_sans_medium"
                android:text="Bacon ipsum dolor amet filet mignon pancetta jerky hamburger kielbasa drumstick, beef ground round pig salami capicola ball tip kevin cupim sausage. Tenderloin turducken frankfurter shank. Biltong pork loin pig buffalo porchetta turducken jowl salami meatloaf. Pork loin beef biltong kevin boudin, bacon andouille pork chop brisket. Pancetta pork loin ribeye chicken, jerky venison filet mignon rump kielbasa t-bone. Buffalo spare ribs short loin cow, pork chop ham hock bresaola. T-bone jerky chicken fatback."/>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

</ScrollView>